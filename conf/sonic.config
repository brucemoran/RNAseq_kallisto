/*
 * --------------------------------------------------------
 *  Nextflow config file for UCD Sonic HPC cluster (SLURM)
 * --------------------------------------------------------
 * Imported under 'sonic' Nextflow profile in:
 * nextflow.config
 *
 * NB that each node (67 standard) have 20 - 48 cores
 * so variabvle amounts of RAM
 */

process {

  container = 'shub://brucemoran/Singularity:rnaseqkallisto.centos7.conda'

  executor = 'slurm'
  cache = 'lenient'

  withName:bbduk {
    cpus = 8
    time = 48.h
  }
  withName:fastp {
    cpus = 4
    time = 24.h
  }
  withName:kallistondx {
    cpus = 8
    time = 24.h
  }
  withName:kallisto {
    cpus = 8
    time = 24.h
  }
}

singularity {

  cacheDir = '/home/people/moranb/singularity/nextflow'
  autoMounts = 'true'

}
