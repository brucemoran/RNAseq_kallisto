/*
 * --------------------------------------------------------
 *  Nextflow config file for UCD Sonic HPC cluster (SLURM)
 * --------------------------------------------------------
 * Imported under 'sonic' Nextflow profile in:
 * nextflow.config
 *
 * NB that each node (67 standard) have 20 - 48 cores
 * so variabvle amounts of RAM
 */

process {

  executor = 'slurm'
  cache = 'lenient'
  container = 'library://bruce.moran/default/projects:rnaseq_kallisto.centos7.conda'

  withName:bbduk {
    cpus = 20
    time = 48.h
  }
  withName:fastp {
    cpus = 4
    time = 24.h
  }
  withName:kallistondx {
    cpus = 20
    time = 24.h
  }
  withName:kallisto {
    cpus = 8
    time = 24.h
  }
}

singularity {

  cacheDir = '/home/people/moranb/singularity/nextflow'
  autoMounts = 'true'

}
